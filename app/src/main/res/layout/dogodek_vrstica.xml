<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textNazivDogodka"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="@dimen/textImeDogodka"
        android:text="Ime dogodka"
        android:textStyle="bold"
        android:textColor="@color/navigationBarColor"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dogodekLokacija"
            android:layout_width="20dp"
            android:src="@mipmap/lokac"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textLokacijaDogodka"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="@dimen/textLokDogodka"
            android:text="Dvorana Tabor, Maribor"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dogodekDatum"
            android:src="@mipmap/koledar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/textDatumDogodka"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="@dimen/textLokDogodka"
            android:text="22.10.2016"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>


</LinearLayout>
