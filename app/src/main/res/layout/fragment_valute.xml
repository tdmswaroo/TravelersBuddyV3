<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel"
    >


    <Spinner
        android:id="@+id/valute1"
        android:layout_width="@dimen/spinner_width"
        android:layout_weight="1"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:layout_height="@dimen/spinner_height" />


    <ImageView
        android:id="@+id/swapIkona"
        android:layout_width="@dimen/swapValuta_width"
        android:layout_height="@dimen/swapValuta_height"
        android:contentDescription="Ikona3"
        android:src="@mipmap/swap"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/valute1"
        android:scaleType="fitXY"/>


    <Spinner
        android:id="@+id/valute2"
        android:layout_width="180dp"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/swapIkona"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp">


        <EditText
            android:id="@+id/textValuta1"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:ems="10"
            />

        <EditText
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="145dp"
            android:id="@+id/textValuta2"
            android:ems="10"
            />
    </LinearLayout>

</RelativeLayout>