<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slikaMape"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@mipmap/potov"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/potovanjeOdDo"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="15dp"
            android:text="Potovanje od - do"
            android:textStyle="bold"
            android:textColor="@color/navigationBarColor"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/odhodDatumSlika"
                android:layout_width="20dp"
                android:src="@mipmap/koledar"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/textDatumOdhod"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15dp"
                android:text="23.04.2016"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/prevozSlika"
                android:layout_width="20dp"
                android:src="@mipmap/car"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tipPrevoza"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15dp"
                android:text="Avto"
                android:layout_marginLeft="35dp"
                />

            <ImageView
                android:id="@+id/timerIcon"
                android:layout_width="20dp"
                android:src="@mipmap/timer_icon"
                android:layout_height="20dp"
                android:layout_marginLeft="80dp"
                />

            <TextView
                android:id="@+id/casPrevoza"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15dp"
                android:text="Cas prevoza"
                android:layout_marginLeft="105dp"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
